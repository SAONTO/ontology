@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ismss: <file:///var/www/html/isms/rdf/isms-schema.ttl#> .

<file:///var/www/html/isms/rdf/isms-schema.ttl> rdf:type owl:Ontology .

ismss:InformationSecurityTools rdf:type rdfs:Class ;
	rdfs:comment "Класс для средств защиты информации (СЗИ)"@ru .

ismss:Specs rdf:type rdfs:Class ;
	rdfs:comment "Класс для описаний, которые характеризуют компьютерные системы с технической и организационнной стороны, а также по требованиям регулятора"@ru .

ismss:IS rdf:type rdfs:Class ;
	rdfs:comment "Класс информационных систем, в отношении которых формируются требования по защите информации"@ru .

ismss:ISPD rdf:type rdfs:Class ;
	rdfs:subClassOf ismss:IS ;
	rdfs:comment "Класс информационных систем персональных данных"@ru .

ismss:SIS rdf:type rdfs:Class ;
	rdfs:subClassOf ismss:IS ;
	rdfs:comment "Класс государственных информационных систем"@ru .

ismss:C_SIS rdf:type rdf:Bag ;
	rdfs:subClassOf ismss:SIS ;
	rdfs:comment "Контейнер для ГИС"@ru .

ismss:C_ISPD rdf:type rdf:Bag ;
	rdfs:subClassOf ismss:ISPD ;
	rdfs:comment "Контейнер для ИСПДн"@ru .

ismss:ProtectiveMeasures rdf:type rdfs:Class ;
	rdfs:comment "Меры и требования по обеспечению безопасности информации в информационных системах"@ru .

ismss:LegalActs rdf:type rdfs:Class ;
	rdfs:сomment "Класс для нормативных правовых актов, определяющих меры и требования по обеспечению безопасности автоматизированных систем, а также порядок разработки, изготовления, и обеспечения эксплуатации автоматизированных систем"@ru .

ismss:ThreatsOfSecurity rdf:type rdfs:Class ;
	rdfs:сomment "Угрозы безопасности информации"@ru .

ismss:possibleImplementation rdf:type rdf:Property ;
	rdfs:comment "В результате наличия субъекта (техническая и эксплуатационная характеристика ИС) возможна реализация объекта (угроза безопасности информации)"@ru ;
	rdfs:domain ismss:IS ;
	rdfs:range ismss:ThreatsOfSecurity .

ismss:acting rdf:type rdf:Property ;
	rdfs:сomment "Информация о статусе НПА: действующий - true, отмененный - false"@ru ;
	rdfs:domain ismss:LegalActs ;
	rdfs:range xsd:boolean .

ismss:isNecessaryFor rdf:type rdf:Property ;
	rdfs:comment "Субъект (мера, сведения) требуется для (реализации системы защиты в информационной системе, оформления аттестационных документов, мера защиты)"@ru ;
	rdfs:domain ismss:ProtectiveMeasures ;
	rdfs:range ismss:IS .

ismss:helpsTo rdf:type rdf:Property ;
	rdfs:comment "Субъект (мера, сведения) может использоваться для (реализации системы защиты в информационной системе, оформления аттестационных документов, мера защиты)"@ru ;
	rdfs:domain ismss:ProtectiveMeasures ;
	rdfs:range ismss:IS .

ismss:isReducedDue rdf:type rdf:Property ;
	rdfs:сomment "Субъект (УБИ) блокируется или снижается вероятность его реализации при наличии объекта (мера по обеспечению информационной безопасности)"@ru ;
	rdfs:domain ismss:ThreatsOfSecurity ;
	rdfs:range ismss:ProtectiveMeasures .

ismss:spec rdf:type rdf:Property ;
	rdfs:comment "Субъект (компьютерная система) характеризуется объектом (категория описания системы)" ;
	rdfs:domain ismss:IS ;
	rdfs:range ismss:Specs .

